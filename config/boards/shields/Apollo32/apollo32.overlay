#include <dt-bindings/zmk/matrix_transform.h>
#include <physical_layouts.dtsi>

/{
    chosen {
        zmk,kscan = &default_kscan;
        zmk,matrix_transform = &default_transform;
    };

    default_kscan: kscan{
        compatible = "zmk,kscan-gpio-matrix";
        label = "default_kscan";
        diode-direction = "col2row";
        wakeup-source;
 
        row-gpios = <&gpio0 17  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,  // D2
                    <&gpio0 31  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,  // D21
                    <&gpio0 29  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>;  // D20

        col-gpios = <&gpio0 22 GPIO_ACTIVE_HIGH>, // D4
                    <&gpio0 24 GPIO_ACTIVE_HIGH>, // D5
                    <&gpio1 6 GPIO_ACTIVE_HIGH>, // D9
                    <&gpio1 4 GPIO_ACTIVE_HIGH>, // D8
                    <&gpio0 11 GPIO_ACTIVE_HIGH>, // D7
                    <&gpio1 0 GPIO_ACTIVE_HIGH>, // D6
                    <&gpio0 9 GPIO_ACTIVE_HIGH>, // D10
                    <&gpio0 10 GPIO_ACTIVE_HIGH>, // D16
                    <&gpio1 11 GPIO_ACTIVE_HIGH>, // D14
                    <&gpio1 13 GPIO_ACTIVE_HIGH>, // D15
                    <&gpio1 15 GPIO_ACTIVE_HIGH>; // D18
    };

    default_transform: matrix_transform {
        compatible ="zmk,matrix-transform";
        rows = <3>;
        columns = <11>;

        map = <
            RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5) RC(0,6) RC(0,7) RC(0,8) RC(0,9) RC(0,10)
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5) RC(1,6) RC(1,7) RC(1,8) RC(1,9) RC(1,10)
            RC(2,0)    RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5) RC(2,6) RC(2,7) RC(2,8)      RC(2,10)
        >;
    };

};
